<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- 半透明效果style -->
    <style name="Dialog_Fullscreen">
        <item name="android:backgroundDimEnabled">true</item> <!-- activity变暗 -->
        <item name="android:windowFullscreen">true</item>  <!-- 让弹出框变为全屏属性 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowAnimationStyle">@style/Dialog_Anim</item>  <!-- 淡入淡出动画 -->
        <item name="android:windowBackground">@android:color/transparent</item>  <!-- 背景为透明效果 -->
    </style>

    <!-- 淡入淡出效果 -->
    <style name="Dialog_Anim">
        <item name="android:windowEnterAnimation">@anim/fading_in</item>
        <item name="android:windowExitAnimation">@anim/fading_out</item>
    </style>

    <!-- 自定义Alertdialog样式 -->
    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!-- 自定义Alertdialog按钮样式 -->
    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 商品悬浮菜单样式 -->
    <style name="tv_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_red</item>
    </style>

    <!-- popupwindow弹出框选项按钮 -->
    <style name="popupwin_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- popupWindow弹出隐藏动画 -->
    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>

    <!-- 主菜单按钮样式 -->
    <style name="main_menu_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_menu_txcolor</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:background">@color/main_menu_bg</item>
    </style>

    <style name="text_basestyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="product_detail_radiobtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">11dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detail_bottomline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <!-- 购买商品流程底部下一步按钮 -->
    <style name="btn_nextstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/pressed_red_selector</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 购买商品流程底部下一步按钮 (黑色主题) -->
    <style name="btn_nextstyle_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/pressed_black_selector</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_et_shape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/loginbtn_mine_shape</item>
    </style>

    <!-- 登录按钮样式 -->
    <style name="login_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@color/grey_line</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 我的列表下划线样式 -->
    <style name="mine_bottomline_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/mine_seperateline</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- 我的列表文字样式 -->
    <style name="mine_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 我的下一步箭头样式 -->
    <style name="mine_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@mipmap/myaccount_arrow</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- 收礼人地址添加类别样式 -->
    <style name="addaddress_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/add_address_shape</item>
    </style>

    <!-- 添加收礼人地址输入框样式 -->
    <style name="addaddress_et_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:textColor">@color/addaddress_ettextcolor</item>
    </style>

</resources>
