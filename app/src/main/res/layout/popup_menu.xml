<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="65dp"
    android:paddingLeft="35dp"
    android:background="@color/black"
    android:alpha="0.8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/header_gotosearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:background="@drawable/menu_search_shape">

                <ImageView
                    android:id="@+id/ib_header_gotosearch"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/ic_search"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_menu_searchbox"
                    android:layout_width="200dp"
                    android:layout_height="28dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textSize="12sp" />

            </LinearLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="搜索"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="40dp">

        <TableRow
            android:id="@+id/tr_menu_cate">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@mipmap/menu_cate"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:textColor="@color/menu_text_color"
                android:text="产品分类"/>
        </TableRow>
        <TableRow android:layout_marginTop="20dp"
            android:id="@+id/tr_menu_me">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@mipmap/menu_me" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:textColor="@color/menu_text_color"
                android:text="个人中心"/>
        </TableRow>
        <TableRow android:layout_marginTop="20dp"
            android:id="@+id/tr_menu_designer">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@mipmap/menu_designer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:textColor="@color/menu_text_color"
                android:text="全部设计师"/>
        </TableRow>
        <TableRow android:layout_marginTop="20dp"
            android:id="@+id/tr_menu_about">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@mipmap/menu_about"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:textColor="@color/menu_text_color"
                android:text="关于啊哈Ahalife"/>
        </TableRow>
    </TableLayout>

</LinearLayout>