<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_address_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_bg_shape">

    <TextView
        android:id="@+id/tv_address_name"
        style="@style/text_basestyle"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_address_phone"
        style="@style/text_basestyle"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text="13348050311" />

    <TextView
        android:id="@+id/tv_address_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxLines="3"
        android:minLines="3"
        android:text="北京市，朝阳区望京东路锐创国际中心19层"/>

    <include layout="@layout/horizontalline"/>

        <TextView
            android:id="@+id/tv_address_del"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/voicelist_textcolor"
            android:gravity="center"
            android:text="@string/deladdress"/>

</LinearLayout>