<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <Button
        android:id="@+id/btn_popupwindow_camera"
        style="@style/popupwin_item"
        android:text="拍照"
        android:background="@drawable/btn_bind_cancel"/>

    <Button
        android:id="@+id/btn_popupwindow_photo"
        style="@style/popupwin_item"
        android:text="从相册选取"
        android:background="@drawable/btn_bind_cancel"/>

    <Button
        android:id="@+id/btn_popupwindows_cancel"
        style="@style/popupwin_item"
        android:background="@drawable/btn_bind_cancel_"
        android:text="取消" />

</LinearLayout>