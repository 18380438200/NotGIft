<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="12dp">

        <cn.ahabox.widget.AdaptiveImageView
            android:id="@+id/iv_orderlist_cover"
            android:layout_width="125dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_orderlist_time"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:padding="3dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignBottom="@id/iv_orderlist_cover"
            android:background="@color/likeblack_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_orderlist_cover">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_gravity="right">

                <TextView
                    style="@style/text_basestyle"
                    android:text="订单号："
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_orderlist_transactionnum"
                    style="@style/text_basestyle"
                    android:lineSpacingExtra="3dp"
                    android:text="15122543305228"
                    android:textSize="12sp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_orderlist_name"
                style="@style/text_basestyle"
                android:layout_weight="1"
                android:text="红色玫瑰镂空书签"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:maxLines="2"
                android:layout_gravity="right"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="数量"/>

                <TextView
                    style="@style/text_basestyle"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:text="1"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="right">

                    <TextView
                        android:id="@+id/tv_orderlist_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/siyn_money"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_orderlist_price"
                        android:layout_toRightOf="@id/tv_orderlist_sign"
                        style="@style/text_basestyle"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:text="138"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/tv_orderlist_detail"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edittext_blackbg_shape"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="@string/detail"/>

                <TextView
                    android:id="@+id/tv_orderlist_delete"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edittext_blackbg_shape"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="@string/orderlist_del"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/content_seperater"/>

</LinearLayout>