<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="cn.ahabox.activity.RefundReasonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/mycustomactionbar"
            android:id="@+id/refundreason_header"/>

        <include layout="@layout/horizontalline"/>

        <EditText
            android:id="@+id/et_refundreason_reason"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textSize="12sp"
            android:gravity="top|left"
            android:padding="15dp"
            android:layout_margin="40dp"
            android:maxLength="200"
            android:background="@drawable/edittext_bg_shape"
            android:hint="@string/refundreason_tip"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_refundreason_cancel"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="@drawable/pressed_black_selector"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:text="取 消"/>

        <TextView
            android:id="@+id/tv_refundreason_post"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@drawable/pressed_red_selector"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="确 认 退 款"/>
    </LinearLayout>

</RelativeLayout>
