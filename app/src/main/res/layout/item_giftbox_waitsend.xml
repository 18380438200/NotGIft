<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_waitsend_cover"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_waitsend_cover">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    style="@style/text_basestyle"
                    android:text="订单号："/>

                <TextView
                    android:id="@+id/tv_waitsend_code"
                    style="@style/text_basestyle"
                    android:text="15122543305228"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_waitsend_name"
                style="@style/text_basestyle"
                android:layout_weight="1"
                android:text="红色玫瑰镂空书签"
                android:layout_marginTop="6dp"
                android:layout_gravity="right"/>

            <TextView
                android:id="@+id/tv_waitsend_send"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_blackbg_shape"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:text="@string/sendta"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/siyn_money"/>

                    <TextView
                        android:id="@+id/tv_waitsend_price"
                        style="@style/text_basestyle"
                        android:textSize="18sp"
                        android:text="138"/>
                </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/content_seperater"/>

</LinearLayout>