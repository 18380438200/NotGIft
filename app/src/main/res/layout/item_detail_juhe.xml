<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="4dp">

    <RelativeLayout
        android:id="@+id/rl_juhe_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_detail_juhe"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_detail_juhe"
            android:layout_width="85dp"
            android:layout_height="15dp"
            android:textSize="10sp"
            android:singleLine="true"
            android:layout_below="@id/iv_detail_juhe"
            android:background="@color/listview_bg"
            android:textColor="@color/voicelist_textcolor"
            android:gravity="center" />

    </RelativeLayout>

</RelativeLayout>